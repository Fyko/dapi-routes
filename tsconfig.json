{
	"compileOnSave": true,
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"removeComments": true,
		"lib": ["ESNext"],
		"sourceMap": true,
		"strict": true,
		"target": "es2019",
		"esModuleInterop": true
	},
	"exclude": [
		"node_modules",
		"tests"
	],
	"include": [
		"src",
		"typings",
	]
}